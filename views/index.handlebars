<div class="container">
    <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8" id="addburger">
            <h1>BURGERS!!!</h1>


            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>

                <button type="submit" id="button">Add Burger! <img id="buttonimg" src="assets/images/burger.png"></button>
            </form>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-5" id="uneaten">
            <h4>Burgers waiting to be devoured!</h4>
            {{#each burgers}} {{#unless devoured}}
